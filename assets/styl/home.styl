global-reset()

h1 {
    font-family-bold()
    font-size: 40px
}

h3 {
    font-family-regular()
    font-size: 24px
}

body {
    -webkit-font-smoothing: antialiased
    color: #FFF
    background: dark-blue
}

.iphone {
    position: relative
    background: #202020
    width: 320px
    height: 0
    padding-top: 630px
    margin: 0 auto
    border-radius: 1.5em

    .mask {
      position: absolute
      top: 0
      bottom: 0
      left: 0
      right: 0
      z-index: 2
      border-radius: 24px
      background: rgba(18, 18, 24, 0.59)
      opacity: 0

      &.off {
        display: none
      }

      &.on {
        opacity: 1
        transition: opacity 0.25s
      }
    }

    .camera {
        position: absolute
        top: 4%
        left: 48.5%
        background: #3f3f3f
        width: 3%
        height: 0
        padding-top: 3%
        border-radius: 50%
    }

    .speaker {
        position: absolute
        top: 7%
        left: 42.5%
        background: #3f3f3f
        width: 15%
        height: 0
        padding-top: 3%
        border-radius: 1em
    }

    .text {
        opacity: 0
        font-size: 1.25rem
        text-align: center
        animation: unhide 5s infinite alternate
    }

    .screen {
        background: #FFF
        width: 90%
        height: 75%
        position: absolute
        top: 12.5%
        left: 5%
        animation: lighten 5s infinite alternate

        iframe {
            width: 100%
            height: 100%
        }
    }

    .square {
        position: absolute
        top: 11px
        left: 11px
        border: 2px solid #d7d7d7
        border-radius: .3em
        width: 45%
        height: 45%
    }
}
