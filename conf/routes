# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                            controllers.Application.index
GET     /preview                     controllers.Application.preview(token: String)
GET     /500                         controllers.Application.triggerUnexpectedError

# Cheminotm
GET     /cheminotm                   controllers.Cheminotm.appRoot
GET     /cheminotm/init              controllers.Cheminotm.init
POST    /cheminotm/besttrip          controllers.Cheminotm.lookForBestTrip
POST    /cheminotm/bestdirecttrip    controllers.Cheminotm.lookForBestDirectTrip
POST    /cheminotm/abort             controllers.Cheminotm.abort
GET     /cheminotm/trace             controllers.Cheminotm.trace
GET     /cheminotm/stop/:id          controllers.Cheminotm.stop(id)
GET     /cheminotm/app/*file         controllers.Cheminotm.app(file)
POST    /cheminotm/signout           controllers.Cheminotm.signout

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file                controllers.Assets.at(path="/public", file)
