# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index


# Cheminotm
GET     /cheminotm/init              controllers.Cheminotm.init
POST    /cheminotm/besttrip          controllers.Cheminotm.lookForBestTrip
POST    /cheminotm/bestdirecttrip    controllers.Cheminotm.lookForBestDirectTrip
POST    /cheminotm/abort             controllers.Cheminotm.abort
GET     /cheminotm/trace             controllers.Cheminotm.trace
GET     /cheminotm/app/*file         controllers.Cheminotm.app(file)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file                controllers.Assets.at(path="/public", file)
